{
  "name": "nextjs-client-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src --max-warnings=0",
    "prepare": "husky install",
    "test": "jest --colors",
    "test:cover": "yarn test --coverage",
    "test:ci": "yarn test:cover --runInBand",
    "test:watch": "yarn test --watch",
    "add:component": "yarn plop --plopfile generators/plopComponent.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook-static": "http-server ./storybook-static"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "dependencies": {
    "next": "13.3.4",
    "next-pwa": "^5.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^5.3.10",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.21.5",
    "@babel/plugin-transform-react-jsx": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@storybook/addon-essentials": "^7.0.7",
    "@storybook/addon-interactions": "^7.0.7",
    "@storybook/addon-links": "^7.1.1",
    "@storybook/addon-styling": "^1.0.5",
    "@storybook/blocks": "^7.0.7",
    "@storybook/nextjs": "^7.0.7",
    "@storybook/react": "^7.0.7",
    "@storybook/testing-library": "^0.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@types/lint-staged": "^13.2.0",
    "@types/node": "18.16.3",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.1",
    "@types/styled-components": "^5.1.26",
    "eslint": "8.39.0",
    "eslint-config-next": "13.3.4",
    "eslint-plugin-storybook": "^0.6.11",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "next-router-mock": "^0.9.3",
    "path": "^0.12.7",
    "plop": "^3.1.2",
    "storybook": "^7.0.7",
    "ts-jest": "^29.1.0",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "webpack": "^5.81.0"
  }
}
